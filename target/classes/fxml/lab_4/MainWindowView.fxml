<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab_4.Controller.MainWindowController">
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button mnemonicParsing="false" onAction="#clippingActionButton" prefHeight="25.0" prefWidth="100.0" text="Обрезать" />
            <Button mnemonicParsing="false" onAction="#generateActionButton" prefHeight="25.0" prefWidth="100.0" text="Сгенерировать" />
            <Button mnemonicParsing="false" onAction="#clearActionButton" prefHeight="25.0" prefWidth="100.0" text="Очистить" />
            <Separator orientation="VERTICAL" prefHeight="25.0" />
            <TextField fx:id="sizeTextField" prefWidth="120.0" promptText="Размер окна NxM" />
            <Button mnemonicParsing="false" onAction="#setSizeActionButton" prefHeight="25.0" prefWidth="100.0" text="ОК" />
        </items>
      </ToolBar>
      <AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="1200.0">

</AnchorPane>
   </children>
</VBox>
